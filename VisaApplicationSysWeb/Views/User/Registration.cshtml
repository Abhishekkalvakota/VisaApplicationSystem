@model VisaApplicationSysWeb.Models.UserModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Registration Form</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body class="bg-light d-flex align-items-center justify-content-center" style="height: 100vh; margin: 0;">

   

    <div class="card" style="width: 300px;">
        <div class="card-body">
            <form method="post" asp-action="Registration" asp-controller="User">

                <div class="form-group">
                    <label for="Username">Username:</label>
                    <input type="text" class="form-control" id="Username" name="Username" required asp-for="Username" />
                    <span asp-validation-for="Username"></span>
                </div>

                <div class="form-group">
                    <label for="Password">Password:</label>
                    <input type="password" class="form-control" id="Password" name="Password" required asp-for="Password" />
                    <span asp-validation-for="Password"></span>
                </div>

                <div class="form-group">
                    <label for="ConfirmPassword">Confirm Password:</label>
                    <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" required asp-for="ConfirmPassword" />
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>

                <button type="submit" class="btn btn-dark btn-block">Register</button>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
