@model VisaApplicationSysWeb.Models.LoginRequestModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
</head>

<body class="bg-light d-flex align-items-center justify-content-center" style="height: 100vh; margin: 0;">

    @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
    {
        <div id="success-message" class="alert alert-success">
            @ViewBag.SuccessMessage
        </div>
    }

    <script>
       
        var successMessageDiv = document.getElementById('success-message');

       
        if (successMessageDiv) {
           
            alert(successMessageDiv.textContent.trim());

          
            successMessageDiv.style.display = 'none';
        }
    </script>
       
    <div class="card" style="width: 300px;">
        <div class="card-body">
            <h5 class="card-title text-center mb-4">Welcome Back!</h5>

            <form id="loginForm" asp-controller="User" asp-action="Login" method="post">

                <div class="form-group">
                    <label for="Username">Username:</label>
                    <input type="text" class="form-control" name="Username" id="Username" required />
                </div>

                <div class="form-group">
                    <label for="Password">Password:</label>
                    <input type="password" class="form-control" name="Password" id="Password" required />
                </div>

                <button type="submit" class="btn btn-dark btn-block">Login</button>

            </form>

            <div class="mt-3 text-center">
                Don't have an account? <a href="/User/Registration">Sign up</a>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
         
            $('#loginForm').validate();
        });
    </script>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
