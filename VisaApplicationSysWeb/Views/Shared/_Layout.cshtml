<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>VisaEase</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Datepicker CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VisaApplicationSysWeb.styles.css" asp-append-version="true" />

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <script>


        $('#loadTableLink').on('click', function (e) {
            debugger;
            e.preventDefault(); // Prevent the default link behavior
            loadTable();
        });
        function loadTable() {
            $.ajax({
                url: '/User/GetApplicantData',
                type: 'GET',
                success: function (data) {
                    applicants = data.applicants; // Assign the value to the global variable

                    if (applicants && applicants.length > 0) {
                        var isVisaApplied = applicants[0].IsVisaApplied;
                        updateNavigationLinks(isVisaApplied);
                        update(isVisaApplied);
                    }
                },
                error: function () {
                    console.error('Error loading table data.');
                }
            });
        }

        function updateNavigationLinks(isVisaApplied) {
            var profileLink = $('#profileLink');
            var visaStatusLink = $('#visaStatusLink');

            if (isVisaApplied) {
                profileLink.show();
                visaStatusLink.show();
            } else {
                profileLink.hide();
                visaStatusLink.hide();
            }
        }

        function update(isVisaApplied) {
            var profileLink = $('#profileLink');
            var visaStatusLink = $('#visaStatusLink');

            if (isVisaApplied) {
                var visatypeId = applicants[0].VisaTypeId;
                var applicantId = applicants[0].ApplicantID;

                profileLink.attr('href', `/User/Profile?visatypeId=${visatypeId}&applicantId=${applicantId}`);
                visaStatusLink.attr('href', `/User/VisaStatus?applicantId=${applicantId}`);
            } else {
                profileLink.attr('href', '/User/DefaultProfile');
                visaStatusLink.attr('href', '/User/DefaultVisaStatus');
            }
        }
    </script>


</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom box-shadow">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">VisaEase</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive"
                        aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link loadTableLink" asp-area="" asp-controller="User" asp-action="Profile" id="profileLink">View Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link loadTableLink" asp-area="" asp-controller="User" asp-action="GetVisaStatus" id="visaStatusLink">Visa Status</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="User" asp-action="Login">Log Out</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
   
       <div class="container-fluid">

        @RenderBody()
       </div>



    <footer class="border-top footer text-muted">
